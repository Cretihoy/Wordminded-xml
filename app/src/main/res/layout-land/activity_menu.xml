<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?colorOnPrimary"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:src="@drawable/logo" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/menu_button_play"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_big_size"
            android:layout_marginTop="@dimen/margin_big_size"
            android:layout_marginEnd="@dimen/margin_big_size"
            android:layout_marginBottom="@dimen/margin_medium_size"
            android:background="@drawable/rectangle_red"
            android:padding="10dp"
            android:text="@string/menu_start_button"
            android:textColor="?colorOnSecondary"
            android:textSize="@dimen/text_medium_size"
            app:backgroundTint="@null" />

        <Button
            android:id="@+id/menu_button_rules"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_big_size"
            android:layout_marginTop="@dimen/margin_medium_size"
            android:layout_marginEnd="@dimen/margin_big_size"
            android:layout_marginBottom="@dimen/margin_medium_size"
            android:background="@drawable/rectangle_blue"
            android:padding="10dp"
            android:text="@string/menu_rules_button"
            android:textColor="?colorOnSecondary"
            android:textSize="@dimen/text_medium_size"
            app:backgroundTint="@null" />

        <Button
            android:id="@+id/menu_button_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_big_size"
            android:layout_marginTop="@dimen/margin_medium_size"
            android:layout_marginEnd="@dimen/margin_big_size"
            android:layout_marginBottom="@dimen/margin_big_size"
            android:background="@drawable/rectangle_red"
            android:padding="10dp"
            android:text="@string/menu_settings_button"
            android:textColor="?colorOnSecondary"
            android:textSize="@dimen/text_medium_size"
            app:backgroundTint="@null" />

    </LinearLayout>
</LinearLayout>