<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?colorOnPrimary"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/settings_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/margin_big_size"
        android:layout_marginEnd="@dimen/margin_big_size"
        android:layout_weight="1"
        android:text="@string/settings_title"
        android:textAlignment="center"
        android:textColor="?colorOnSecondary"
        android:textSize="@dimen/text_big_size" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_big_size"
                android:layout_weight="1"
                android:text="@string/settings_switch_change_infinity"
                android:textAlignment="center"
                android:textColor="?colorOnSecondary"
                android:textSize="30sp" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/settings_switch_infinity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/margin_big_size"
                android:layout_weight="0.5" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>