<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/game_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?colorOnPrimary"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/margin_big_size"
            android:layout_marginTop="@dimen/margin_big_size"
            android:layout_marginEnd="@dimen/margin_big_size"
            android:layout_marginBottom="@dimen/margin_medium_size"
            android:layout_weight="1"
            android:backgroundTint="?colorSecondary"
            android:rotation="180"
            app:cardCornerRadius="@dimen/corner_radius">

            <TextView
                android:id="@+id/game_letter_top"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textAlignment="center"
                android:textColor="?colorOnSecondary"
                android:textSize="@dimen/text_medium_size"
                tools:text="A" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/margin_big_size"
            android:layout_marginTop="@dimen/margin_medium_size"
            android:layout_marginEnd="@dimen/margin_big_size"
            android:layout_marginBottom="@dimen/margin_big_size"
            android:layout_weight="1"
            android:backgroundTint="?colorPrimary"
            android:rotation="180"
            app:cardCornerRadius="@dimen/corner_radius">

            <TextView
                android:id="@+id/game_task_top"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textAlignment="center"
                android:textColor="?colorOnSecondary"
                android:textSize="@dimen/text_medium_size"
                tools:text="LALALALALA" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/margin_big_size"
            android:layout_marginTop="@dimen/margin_big_size"
            android:layout_marginEnd="@dimen/margin_big_size"
            android:layout_marginBottom="@dimen/margin_medium_size"
            android:layout_weight="1"
            android:backgroundTint="?colorPrimary"
            app:cardCornerRadius="@dimen/corner_radius">

            <TextView
                android:id="@+id/game_task_bottom"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textAlignment="center"
                android:textColor="?colorOnSecondary"
                android:textSize="@dimen/text_medium_size"
                tools:text="LALALALALA" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/margin_big_size"
            android:layout_marginTop="@dimen/margin_medium_size"
            android:layout_marginEnd="@dimen/margin_big_size"
            android:layout_marginBottom="@dimen/margin_big_size"
            android:layout_weight="1"
            android:backgroundTint="?colorSecondary"
            app:cardCornerRadius="@dimen/corner_radius">

            <TextView
                android:id="@+id/game_letter_bottom"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textAlignment="center"
                android:textColor="?colorOnSecondary"
                android:textSize="@dimen/text_medium_size"
                tools:text="A" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</LinearLayout>