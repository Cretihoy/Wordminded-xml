<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?colorOnPrimary"
    android:orientation="vertical"
    tools:context=".menu.MenuActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="7"
        android:src="@drawable/logo" />

    <Button
        android:id="@+id/menu_button_play"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_big_size"
        android:layout_marginTop="@dimen/margin_big_size"
        android:layout_marginEnd="@dimen/margin_big_size"
        android:layout_marginBottom="@dimen/margin_medium_size"
        android:layout_weight="0.5"
        android:background="@drawable/rectangle_red"
        android:text="@string/menu_text_game"
        android:textColor="?colorOnSecondary"
        android:textSize="@dimen/text_medium_size"
        app:backgroundTint="@null" />

    <Button
        android:id="@+id/menu_button_rules"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_big_size"
        android:layout_marginTop="@dimen/margin_medium_size"
        android:layout_marginEnd="@dimen/margin_big_size"
        android:layout_marginBottom="@dimen/margin_medium_size"
        android:layout_weight="0.5"
        android:background="@drawable/rectangle_blue"
        android:text="@string/text_rules"
        android:textColor="?colorOnSecondary"
        android:textSize="@dimen/text_medium_size"
        app:backgroundTint="@null" />

    <Button
        android:id="@+id/menu_button_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_big_size"
        android:layout_marginTop="@dimen/margin_medium_size"
        android:layout_marginEnd="@dimen/margin_big_size"
        android:layout_marginBottom="@dimen/margin_big_size"
        android:layout_weight="0.5"
        android:background="@drawable/rectangle_red"
        android:text="@string/menu_text_settings"
        android:textColor="?colorOnSecondary"
        android:textSize="@dimen/text_medium_size"
        app:backgroundTint="@null" />

</LinearLayout>