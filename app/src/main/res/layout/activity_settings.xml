<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?colorOnPrimary"
    android:orientation="vertical"
    tools:context=".settings.SettingsActivity">

    <TextView
        android:id="@+id/settings_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_big_size"
        android:layout_marginTop="@dimen/margin_big_size"
        android:layout_marginEnd="@dimen/margin_big_size"
        android:layout_marginBottom="@dimen/margin_medium_size"
        android:text="@string/settings_title"
        android:textAlignment="center"
        android:textColor="?colorOnSecondary"
        android:textSize="@dimen/text_big_size" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_big_size"
            android:layout_weight="1"
            android:text="@string/settings_switch_change_infinity"
            android:textAlignment="center"
            android:textColor="?colorOnSecondary"
            android:textSize="30sp" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/settings_switch_infinity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin_big_size"
            android:layout_weight="0.5" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_big_size"
            android:layout_weight="1"
            android:text="@string/settings_counter_change_font_size"
            android:textAlignment="center"
            android:textColor="?colorOnSecondary"
            android:textSize="30sp" />

        <Button
            android:id="@+id/settings_button_minus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/rectangle_red"
            android:text="@string/settings_counter_minus"
            android:textColor="?colorOnSecondary"
            android:textSize="@dimen/text_medium_size"
            app:backgroundTint="@null" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin_medium_size"
            android:textColor="?colorOnSecondary"
            android:textSize="@dimen/text_medium_size"
            tools:text="20" />

        <Button
            android:id="@+id/settings_button_plus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/rectangle_red"
            android:text="@string/settings_counter_plus"
            android:textColor="?colorOnSecondary"
            android:textSize="@dimen/text_medium_size"
            app:backgroundTint="@null" />

    </LinearLayout>
</LinearLayout>